@using System.Web.Optimization
@model LibraryAssistantApp.Models.EmployeeEditModel

<div class="panel panel-default">
    <table class="table" title="Click the checkboxes to assign trainer topics.">
        <thead>
            <tr>
                <th>
                    Topic
                </th>
                <th>
                    Select
                </th>
            </tr>
        </thead>
        @for (int i = 0; i < Model.topicchecks.Count(); i++)
        {
            <tbody>
                <tr>
                    @Html.HiddenFor(m => m.topicchecks[i].topic_seq)
                    <td>
                        @Html.DisplayFor(m => m.topicchecks[i].topic_name)
                    </td>
                    <td>
                        @Html.CheckBoxFor(m => m.topicchecks[i].topic_ind, htmlAttributes: new { @class = @Model.topicchecks[i].topic_seq })
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>