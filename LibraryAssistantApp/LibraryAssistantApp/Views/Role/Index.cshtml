@using System.Web.Optimization
@model LibraryAssistantApp.Models.RoleIndexModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $('#result-table-1 tr').click(function () {
            $('.btn-edit').attr('href', '/Role/Edit/' + $(this).attr('id'));

            });
        });
    $(document).ready(function () {
        $('#result-table-1 tr').click(function () {
            $('.btn-delete').attr('href', '/Role/Delete/' + $(this).attr('id'));
        });
    });
</script>
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
@Ajax.ActionLink("Select", "RoleDetails", new { id = 1 }, new AjaxOptions()
{
    HttpMethod = "GET",
    UpdateTargetId = "role-details",
    InsertionMode = InsertionMode.Replace
})

@Ajax.ActionLink("Select", "ActionDetails", new { ActionId = 4 }, new AjaxOptions()
{
    HttpMethod = "GET",
    UpdateTargetId = "action-details",
    InsertionMode = InsertionMode.Replace
})
<h2>Roles</h2>
<div class="row">
    <div class="table-responsive">
        <table class="table table-hover" id="result-table-1">
            <thead>
                <tr>
                    <th>
                        Role Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Roles)
                {
                    string selectedRow = "";
                    if (item.Role_ID == ViewBag.RoleID)
                    {
                        selectedRow = "selectedrow";
                    }
                    <tr class="@selectedRow" id="@item.Role_ID">
                        <td>
                            @item.Role_Name
                        </td>
                        <td>
                            @Html.ActionLink("Select", "Index", new { id = item.Role_ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-default" })
        @Html.ActionLink("Update", "Edit", null, htmlAttributes: new { @class = "btn btn-default btn-edit" })
        @Html.ActionLink("Delete", "Delete", null, htmlAttributes: new { @class = "btn btn-default btn-delete" })
    </div>
</div>

<div class="col-md-8" id="role-details">
</div>


<div class="col-md-4" id="action-details">

</div>