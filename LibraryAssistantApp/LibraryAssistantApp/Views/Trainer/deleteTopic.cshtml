@model LibraryAssistantApp.Models.Topic
    @using LibraryAssistantApp.Models

@{
    ViewBag.Title = "Delete Topic";
    var category = (Category)ViewBag.Category;
}

<h2>Delete Topic</h2>

<h3 class="bg-info shaded">Are you sure you want to delete this topic?</h3>
<div class="col-md-6">
    <hr />
    <h4 class="bg-warning shaded">Topic details:</h4>
    <div class="panel panel-default">
        <table class="table">
            <tbody>
                <tr>
                    <td style="padding-right:5em"><strong>Topic Name:</strong></td>
                    <td>@Model.Topic_Name</td>
                </tr>
                <tr>
                    <td><strong>Description:</strong></td>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td><strong>Category:</strong></td>
                    <td>@category.Category_Name</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back", "viewTopic", "Trainer", htmlAttributes: new { @class = "btn btn-primary" })
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    }
</div>
