@model LibraryAssistantApp.Models.Category

@{
    ViewBag.Title = "deleteCategory";
    Layout = (string)Session["layout"];
}

<h2>Delete Category</h2>

<h3>Are you sure you want to delete this category?</h3>
<div>
    <hr />
    @Html.HiddenFor(m => m.Category_ID)
    <table>
        <tbody>
            <tr>
                <td style="padding-right:5em"><strong>Category Name:</strong></td>
                <td>@Model.Category_Name</td>
            </tr>
            <tr>
                <td><strong>Description:</strong></td>
                <td>@Model.Description</td>
            </tr>
        </tbody>
    </table>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back", "viewCategory", "Trainer", htmlAttributes: new { @class = "btn btn-default" })
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
