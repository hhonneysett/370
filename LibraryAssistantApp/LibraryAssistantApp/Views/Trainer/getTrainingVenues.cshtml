@model IEnumerable<LibraryAssistantApp.Models.Venue>

<div id="availableVenues" class="col-md-12">
    @{
        if (Model.Any())
        {
            <div id="venueDetails"><span id="venueArrow" class="glyphicon glyphicon-triangle-bottom"></span><b>Select A Venue:</b></div>

            <hr />

            <div id="toggleVenue">
                <div class="panel panel-default">
                    <table class="table" id="venueTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Venue_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Capacity)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Building_Floor.Campus_ID)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Venue_Type1.Description)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr onclick="AssignButtonClicked(this)" data-assigned-id="@item.Venue_ID">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Venue_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Capacity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Building_Floor.Campus_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Venue_Type1.Description)
                                    </td>
                                </tr>
                            }
                        </tbody>                                               
                    </table>
                </div>

                    <input type="button" id="btnProceed" class="btn btn-default" value="Proceed"/>
            </div>
            
            
        }
        else
        {
            <p>No Venues Available</p>
        }
    }
</div>
