@model LibraryAssistantApp.Models.TrainingDetailsModel

<div id="trainingDetails" class="col-md-4">

    <h4 class="bg-warning shaded">Training Session Details:</h4>
    <div class="panel panel-default">
        <div class="panel-body text-center">
            <div class="text-left">
                <table>
                    <tbody>
                        <tr>
                            <td style="padding-right:5em"><b>@Html.DisplayNameFor(m => m.personId)</b></td>
                            <td>@Html.DisplayFor(m => m.personId)</td>
                        </tr>

                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.bookingType)</b></td>
                            <td>@Html.DisplayFor(m => m.bookingType)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.category)</b></td>
                            <td>@Html.DisplayFor(m => m.category)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.topic)</b></td>
                            <td>@Html.DisplayFor(m => m.topic)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.date)</b></td>
                            <td>@Html.DisplayFor(m => m.date)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.timeslot)</b></td>
                            <td>@Html.DisplayFor(m => m.timeslot)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.campus)</b></td>
                            <td>@Html.DisplayFor(m => m.campus)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.building)</b></td>
                            <td>@Html.DisplayFor(m => m.building)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.venue)</b></td>
                            <td>@Html.DisplayFor(m => m.venue)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.trainer)</b></td>
                            <td>@Html.DisplayFor(m => m.trainer)</td>
                        </tr>
                        <tr>
                            <td><b>@Html.DisplayNameFor(m => m.status)</b></td>
                            <td>@Html.DisplayFor(m => m.status)</td>
                        </tr>
                    </tbody>
                </table>

                <hr />
                <button class="btn btn-primary" type="button" id="updateTraining" title="Update booking details."><span class="fa fa-wrench"></span> Update</button>
                <button class="btn btn-primary" type="button" id="cancelTraining" title="Cancel booking."><span class="fa fa-ban"></span> Cancel</button>
            </div>

            @{
                if (Model.attendance)
                {
                    <hr />

                        <b>Training Session Actions</b>

                        <hr />

                        @Html.ActionLink("Generate Attendance Register", "generateAttendance", "Trainer", null, htmlAttributes: new { @class = "btn btn-primary btn-block" })
                        @Html.ActionLink("Log Attendance", "logAttendance", "Trainer", null, htmlAttributes: new { @class = "btn btn-primary btn-block", @title = "Record attendance for selected training session." })
                }
                else
                {
                    <hr />

                        <b>No Attendees</b>
                }
            }
        </div>
    </div>
</div>

<script type="text/javascript">

    //update selected training session
    $("#updateTraining").click(function () {
        window.location.href = '/Trainer/updateTrainingSess';
    })

</script>
