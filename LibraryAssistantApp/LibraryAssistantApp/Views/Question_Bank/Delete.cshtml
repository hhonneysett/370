@model LibraryAssistantApp.Models.Question_Bank

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>Are you sure you want to delete this question?</h3></div>
    <div class="panel-body">

        <p>All saved possible answers for this question will be deleted aswell.</p>
        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Question_Text)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Question_Text)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Question_Topic.Topic_Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Question_Topic.Topic_Name)
                </dd>



            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Index")'" />

                </div>
            }
        </div>
    </div>
</div>
