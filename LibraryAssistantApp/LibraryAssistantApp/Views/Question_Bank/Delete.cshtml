@model LibraryAssistantApp.Models.Question_Bank

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>Are you sure you want to delete this question?</h3></div>
    <div class="panel-body">

        <p>All saved possible answers for this question will be deleted aswell.</p>
        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Question_Text)
              
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Question_Text)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Question_Topic.Topic_Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Question_Topic.Topic_Name)
                </dd>



            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    
                    @if (ViewBag.Error != null)
                    {
                        <input disabled type="submit" value="Delete" class="btn btn-default" />
                        <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Index")'" />
                        <div style="text-align:center" class="isa_warning">@ViewBag.Error</div>

                    }
                    else
                    {
                        <input type="submit" value="Delete" class="btn btn-default" />
                        <input type="button" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Index")'" />

                        if (ViewBag.OnlyQinT != null)
                        {
                            <div style="text-align:center" class="isa_warning">@ViewBag.OnlyQinT</div>
                        }
                    }

                     
                </div>
            }
        </div>
    </div>
</div>
<style>
    .isa_info, .isa_success, .isa_warning, .isa_error {
        margin: 10px 0px;
        padding: 12px;
        text-align: center;
    }

    .isa_info {
        color: #00529B;
        background-color: #BDE5F8;
        text-align: center;
    }

    .isa_success {
        color: #4F8A10;
        background-color: #DFF2BF;
    }

    .isa_warning {
        color: #9F6000;
        background-color: #FEEFB3;
        text-align: center;
    }

    .isa_error {
        color: #D8000C;
        background-color: #FFBABA;
        text-align: center;
    }

        .isa_info i, .isa_success i, .isa_warning i, .isa_error i {
            margin: 10px 22px;
            font-size: 2em;
            vertical-align: middle;
        }
</style>