@model LibraryAssistantApp.Models.LostPasswordModel

@{
    ViewBag.Title = "Forgot Password";
}

<h2>Forgot Password</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-md-6">
            <h4 class="bg-info shaded text-muted">
                Don't worry, follow the instructions below
            </h4>
            <div class="col-md-offset-1">
                <p class="text-muted"><strong>Please enter your "p" or "u" username</strong></p>
                <ul>
                    <li>
                        <p class="text-muted">An email will be sent to your email address</p>
                    </li>
                    <li>
                        <p class="text-muted">Follow the link to change your password</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.personId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.personId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Example: u12345678" } })
                @Html.ValidationMessageFor(model => model.personId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}
