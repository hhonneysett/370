@model LibraryAssistantApp.Models.Login

@{
    Layout = null;
}

<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Content/Login/normalize.css">

    <link rel="stylesheet" href="~/Content/Login/style.css">

</head>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form">
        <ul class="tab-group">
            <li class="tab active"><a href="#login">Log In</a></li>
            <li class="tab"><a href="#signup">Sign Up</a></li>
        </ul>

        <div class="tab-content">
            
            <div id="login">
                <h1>Welcome Back!</h1>

                <form id="loginForm">
                    <div class="field-wrap">
                        <label>
                            Username<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.Person_ID)
                        @Html.ValidationMessageFor(model => model.Person_ID, "", new { @class = "text-danger" })
                    </div>

                    <div class="field-wrap">
                        <label>
                            Password<span class="req">*</span>
                        </label>
                        @Html.EditorFor(model => model.Person_Password, new { htmlAttributes = new { } })
                        @Html.ValidationMessageFor(model => model.Person_Password, "", new { @class = "text-danger" })
                    </div>

                    <p class="forgot">@Html.ActionLink("Forgot Password", "ForgotPassword", "Account")</p>

                    <input type="submit" value="Log In" class="button button-block" />
                </form>
            </div>



        </div>
    </div>

    <script src='~/Scripts/jquery-3.1.0.min.js'></script>
    <script src="~/Scripts/Login/index.js"></script>
}
