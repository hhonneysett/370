@model LibraryAssistantApp.Models.AddPersonTopicModel

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-6">
        <h4>Add Favourite Topic</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @{
            if (ViewBag.Topic_Seq != null)
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Topic_Seq, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.ListBox("Topic_Seq", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Topic_Seq, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            }
            else
            {
                <div class="form-group danger">
                    No available topics to add.
                </div>
            }
        }
        
    </div>
}
