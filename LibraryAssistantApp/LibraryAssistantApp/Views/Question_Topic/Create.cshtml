@model LibraryAssistantApp.Models.Question_Topic

@{
    ViewBag.Title = "Create";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Create Questionnaire Topic</h3>
<hr/>

<h4>Topic details</h4>
        @using (Html.BeginForm("Create","Question_Topic", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">                          
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Topic_Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Topic_Name, new { htmlAttributes = new { @class = "form-control", @Value = (string)ViewBag.Topic_Name, @title="Enter a name for the new topic.Duplicate topics are not allowed." } })
                        @Html.ValidationMessageFor(model => model.Topic_Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Description, new { rows = "3", style = "width:320px", @class = "form-control", @title = "Enter a description for the new topic", @text = (string)ViewBag.Topic_Des, @id= "Topic_Des", @value = (string)ViewBag.Topic_Des })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input title="Create the new topic and proceed add its first question" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Topic_Des').text(@ViewBag.Topic_Des);
    });
</script>