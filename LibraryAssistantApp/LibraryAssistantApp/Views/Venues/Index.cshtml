@model IEnumerable<LibraryAssistantApp.Models.Venue>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venues</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Venue_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Venue_Type1.Description)
        </th>
        <th>
            @Html.DisplayName("Floor Level")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Building_Floor.Building.Building_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Building_Floor.Building.Campu.Campus_Name)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Type1.Description)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.Building_Floor.Floor_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Building_Floor.Building.Building_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Building_Floor.Building.Campu.Campus_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.Venue_ID  }) |
            @Html.ActionLink("Details", "Details", new {  id= item.Venue_ID  }) |
            @Html.ActionLink("Delete", "Delete", new {  id=item.Venue_ID  })
        </td>
    </tr>
}

</table>

<input type="submit" value="Campuses" class="btn btn-default" onclick="location.href='@Url.Action("Index","Campus")'" /> <input type="submit" value="Buildings" class="btn btn-default" onclick="location.href='@Url.Action("Index","Buildings")'" /> <input type="submit" value="Building floors" class="btn btn-default" onclick="location.href='@Url.Action("Index","Building_Floor")'" /> <input type="submit" value="Venues" class="btn btn-default" onclick="location.href='@Url.Action("Index","Venues")'" />