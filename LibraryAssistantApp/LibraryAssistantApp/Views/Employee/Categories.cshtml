@model LibraryAssistantApp.Models.EmployeeAddModel

<div class="panel panel-default">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Topic
                </th>
                <th>
                    Select
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.topic_check.Count(); i++)
            {
                <tr>
                    @Html.HiddenFor(m => m.topic_check[i].topic_seq)
                    <td>
                        @Html.DisplayFor(m => Model.topic_check[i].topic_name)
                    </td>
                    <td>
                        @Html.CheckBoxFor(m => Model.topic_check[i].topic_ind, htmlAttributes: new { @class = @Model.topic_check[i].topic_seq } )
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

