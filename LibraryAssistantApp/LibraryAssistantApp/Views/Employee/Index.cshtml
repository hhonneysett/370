                    <div class="btn-group">
                        @Html.ActionLink("Delete", "Delete", null, htmlAttributes: new { @class = "btn btn-primary btn-delete", @title="Delete selected employee." })
                    </div>
                    <div class="loading"><img src="~/gif/rolling-sm-dark.gif" /></div>
                </div>
            </div>
        </div>
