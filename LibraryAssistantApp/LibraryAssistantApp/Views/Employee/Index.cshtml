@section script {

    <script type="text/javascript">
        $(document).ready(function () {
            $('#rolesList').change(function () {
                var a = $(this).children(':selected').attr('id');
                var b = $('#username').val();
                var c = $('#name').val();
                var d = $('#surname').val();
                var e = $('#email').val();
                $.ajax({
                    type: 'GET',
                    data: { roleid: a, username: b, name: c, surname: d, email: e },
                    url: '@Url.Action("Employees", "Employee")',
                    beforeSend: function () {
                        $('.loading').show();
                    },
                    success: function (result) {
                        $('#emp-partial').html(result);
                    }
                }).done(function () {
                    $('.loading').hide();
                });
            });
            $('#btn-search').click(function () {
                var a = $(this).children(':selected').attr('id');
                var b = $('#username').val();
                var c = $('#name').val();
                var d = $('#surname').val();
                var e = $('#email').val();
                $.ajax({
                    type: 'GET',
                    data: { roleid: a, username: b, name: c, surname: d, email: e },
                    url: '@Url.Action("Employees", "Employee")',
                    beforeSend: function () {
                        $('.loading').show();
                    },
                    success: function (result) {
                        $('#emp-partial').html(result);
                    }
                }).done(function () {
                    $('.loading').hide();
                });
            });
            $('#btn-reset').click(function () {
                $('#username').val('');
                $('#name').val('');
                $('#surname').val('');
                $('#email').val('');
            });
            $('.message').click(function () {
                $(this).hide();
            })
        });
    </script>


