@model IEnumerable<LibraryAssistantApp.Models.Campus>

@{
    ViewBag.Title = "ViewCampus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Campuses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Campus_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Campus_Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateCampus", new { id=item.Campus_ID }) |
            @Html.ActionLink("Delete", "DeleteCampus", new { id=item.Campus_ID })
        </td>
    </tr>
}

</table>
