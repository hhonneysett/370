@model LibraryAssistantApp.Models.Common_Problem

@{
    ViewBag.Title = "Delete Problem";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Delete Common Problem</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Common_Problem_Name)</b></td>
                        <td style="padding-left:5px">@Html.DisplayFor(model => model.Common_Problem_Name)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(d => d.Description)</b></td>
                        <td style="padding-left:5px">@Html.DisplayFor(d => d.Description)</td>
                    </tr>
                    <tr>
                        <td><b>Problem Type</b></td>
                        <td style="padding-left:5px">@Html.DisplayFor(m => m.Common_Problem_Type.Common_Problem_Type_Name)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn btn-default" id="btnDeleteProblem">Delete</button> |
            @Html.ActionLink("Back to List", "viewCommonProblems")
        </div>
    }
</div>
