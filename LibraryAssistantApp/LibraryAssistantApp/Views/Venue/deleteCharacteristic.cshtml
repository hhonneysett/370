@model LibraryAssistantApp.Models.Characteristic

@{
    ViewBag.Title = "Delete Characteristic";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Characteristic</h2>

<h4 class="bg-info shaded">Are you sure you want to delete this characteristic?</h4>
<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h5 class="bg-warning shaded">Characteristic details:</h5>
            <div class="panel panel-default">
                <table class="table">
                    <tr>
                        <td><b>@Html.DisplayNameFor(model => model.Characteristic_Name)</b></td>
                        <td style="padding-left:5px">@Html.DisplayFor(model => model.Characteristic_Name)</td>
                    </tr>
                    <tr>
                        <td><b>@Html.DisplayNameFor(d => d.Description)</b></td>
                        <td style="padding-left:5px">@Html.DisplayFor(d => d.Description)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> 
            @Html.ActionLink("Back to List", "viewCharacteristics", null, new { @class = "btn btn-primary"})
        </div>
    }
</div>
