@model LibraryAssistantApp.Models.commonProblemModel

@{
    ViewBag.Title = "Edit Problem";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<a href="/help/venue_problems.pdf" title="Page Help"><div class="btn-help"><span><i class="fa fa-question-circle" aria-hidden="true"></i></span></div></a>
<h2>Edit Common Problem</h2>
<h4 class="bg-info shaded">Provide updated common problem details below:</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Common_Problem_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Common_Problem_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Common_Problem_Name, new { htmlAttributes = new { @class = "form-control", @title = "Enter common problem name." } })
                @Html.ValidationMessageFor(model => model.Common_Problem_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @title = "Enter common problem description." } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Problem Type</label> 
            <div class="col-md-10">
                @Html.DropDownList("Common_Problem_Type_ID", null, htmlAttributes: new { @class = "form-control", @title = "Select common problem type." })
                @Html.ValidationMessageFor(model => model.Common_Problem_Type_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "viewCommonProblems")
</div>
