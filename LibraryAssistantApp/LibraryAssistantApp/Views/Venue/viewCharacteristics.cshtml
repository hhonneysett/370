@model IEnumerable<LibraryAssistantApp.Models.Characteristic>

@{
    ViewBag.Title = "Characteristucs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Venue Characteristics</h2>
    @Html.ActionLink("Create New", "addCharacteristic", null, new { @class = "btn btn-primary exp-fixed", @title = "Create new characteristic."})
</div>
<hr />

<h4 class="bg-info shaded">Existing venue characteristics:</h4>
<div class="panel panel-default">
    <div class="panel-body">
        <table id="table" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Characteristic_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Characteristic_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "updateCharacteristic", new { id = item.Characteristic_ID }) |
                            @Html.ActionLink("Delete", "deleteCharacteristic", new { id = item.Characteristic_ID })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        //initiate datatable
        $('#table').DataTable();
    })
</script>
