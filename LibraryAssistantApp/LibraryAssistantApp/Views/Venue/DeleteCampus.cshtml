@model LibraryAssistantApp.Models.Campus

@{
    ViewBag.Title = "DeleteCampus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Campus</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Campus</h4>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Campus_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Campus_Name, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back", "ViewCampus", "Venue", htmlAttributes: new { @class = "btn btn-default" })
            <input type="submit" value="Delete" class="btn btn-default" /> 
        </div>
    }
</div>
