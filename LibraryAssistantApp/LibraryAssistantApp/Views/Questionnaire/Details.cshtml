@model LibraryAssistantApp.Models.Questionnaire

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default ">
    <div class="panel-heading"><h2>Details</h2></div>
    <div class="panel-body">



        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                   
                </thead>

                <tbody>

                    <tr style="text-align:center">
                        <td colspan="2"><h3>Questionnaire</h3></td>
                    </tr>

                    <tr>
                        <td>Name:</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Html.DisplayFor(model => model.Description)</td>
                    </tr>
                    <tr>
                        <td>Assessment Type:</td>
                        <td>@Html.DisplayFor(model => model.Assessment_Type)</td>
                    </tr>
                    <tr>
                        <td>Create Date:</td>
                        <td>@Html.DisplayFor(model => model.Create_Date)</td>
                    </tr>
                    <tr>
                        <td>Active from:</td>
                        <td>@Html.DisplayFor(model => model.Active_From)</td>
                    </tr>
                    <tr>
                        <td>Expires on:</td>
                        <td>@Html.DisplayFor(model => model.Active_To)</td>
                    </tr>
                    <tr>
                        <td><label >Status</label></td>
                        <td><label> @ViewBag.Status</label></td>
                    </tr>

                    @if (@ViewBag.StatusPhrase != "None" )
                    {
                        <tr>
                            <td>@ViewBag.StatusPhrase</td>
                            <td>@ViewBag.Days</td>
                        </tr>
                    }

                    <tr>
                        <td>Topic:</td>
                        <td>@Html.DisplayFor(model => model.Question_Topic.Topic_Name)</td>
                    </tr>
                    <tr>
                        <td>Creator:</td>
                        <td>@Html.DisplayFor(model => model.Registered_Person.Person_Name)</td>
                    </tr>
                    <tr>
                        <td>Amount of questions assigned:</td>
                        <td>@ViewBag.AmountOfQuestions</td>
                    </tr>

                    <tr>
                        <td>Current amount of responses:</td>
                        <td>@ViewBag.Responded</td>
                    </tr>


                    @if (ViewBag.Person_Involved != "None")
                    {

                        <tr style="text-align:center">
                            <td colspan="2"><h3>Employee being assessed</h3></td>
                        </tr>

                        <tr>
                            <td>Employee Name:</td>
                            <td>@ViewBag.Person_Involved</td>
                        </tr>
                    }

                    @if (ViewBag.Selected_Training_Session != "None")
                    {
                        <tr  style="text-align:center" >
                            <td colspan="2"><h3>Training session being assessed</h3></td>
                        </tr>

                        <tr>
                            <td> Time slot:</td>
                            <td>@ViewBag.Selected_Training_Session</td>
                        </tr>

                        <tr>
                            <td>Topic:</td>
                            <td>@ViewBag.Training_Topic</td>
                        </tr>
                    }

                    @if (ViewBag.VenueName != "None")
                    {
                        <tr style="text-align:center">
                            <td colspan="2"><h3>Venue being assessed</h3></td>
                        </tr>

                        <tr>
                            <td> Campus:</td>
                            <td>@ViewBag.Campus</td>
                        </tr>

                        <tr>
                            <td>Building:</td>
                            <td>@ViewBag.BuildingName</td>
                        </tr>

                        <tr>
                            <td>Building Floor:</td>
                            <td>@ViewBag.BuildingFloor</td>
                        </tr>

                        <tr>
                            <td>Venue:</td>
                            <td>@ViewBag.VenueName</td>
                        </tr>
                    }

                </tbody>
                
            </table>
        </div>

        <p>
            <input data_toggle = "tooltip" title = "View the full questionnaire to see what it will look like to those responding to it" type="submit" value="Preview" class="btn btn-default" onclick="location.href='@Url.Action("Preview","Questionnaire", new { Model.Name})'" /> <input data_toggle = "tooltip" title = "Go back to the list of questionnaires" type="submit" value="Finish" class="btn btn-default pull-right" onclick="location.href='@Url.Action("Index","Questionnaire")'" />
        </p>
    </div>
</div>


<script>
$(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
});
</script>
