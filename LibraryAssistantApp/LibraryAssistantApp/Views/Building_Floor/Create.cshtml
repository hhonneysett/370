@model LibraryAssistantApp.Models.Building_Floor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create building floor for the current building</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Campus_ID);
    @Html.HiddenFor(model => model.Building_ID);

    <div class="form-horizontal">
        
        <div class="form-group">
            @Html.LabelFor(model => model.Floor_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Floor_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Floor_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <input type="submit" value="Cancel" class="btn btn-default" onclick="location.href='@Url.Action("Details","Buildings", new { id=ViewBag.Building_ID})'" />
</div>
